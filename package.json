{
  "name": "liars-dice",
  "version": "0.0.1",
  "description": "A dice game about deception",
  "author": "Alcus",
  "license": "ISC",
  "scripts": {
    "build:client": "npm run build --workspace=packages/client",
    "build:server": "npm run build --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:server": "npm run dev --workspace=packages/server",
    "format": "prettier . --write",
    "install:client": "npm install --workspace=packages/client",
    "install:common": "npm install --workspace=packages/common",
    "install:server": "npm install --workspace=packages/server",
    "lint:client": "npm run lint --workspace=packages/client",
    "lint:common": "npm run lint --workspace=packages/common",
    "lint:server": "npm run lint --workspace=packages/server",
    "remove:client": "npm remove --workspace=packages/client",
    "remove:common": "npm remove --workspace=packages/common",
    "remove:server": "npm remove --workspace=packages/server",
    "start:client": "npm run start --workspace=packages/client",
    "start:server": "npm run start --workspace=packages/server",
    "test": "npm run test:client && npm run test:common && npm run test:server",
    "test:client": "npm test --workspace=packages/client",
    "test:common": "npm test --workspace=packages/common",
    "test:server": "npm test --workspace=packages/server"
  },
  "workspaces": [
    "packages/client",
    "packages/server",
    "packages/common"
  ],
  "devDependencies": {
    "prettier": "3.0.3"
  }
}
